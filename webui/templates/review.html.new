{% extends "main.html" %}
{% block content %}
    <div class="container">
        <h1>üîç Review New Devices</h1>
        
        <form method="POST" action="{{ url_for('review.review_page') }}">
            {% if devices %}
            <div class="action-buttons">
                <button type="submit" name="action" value="approve" class="btn btn-success">‚úì Approve Selected</button>
                <button type="submit" name="action" value="block" class="btn btn-danger">‚õî Block Selected</button>
                <select name="risk_level" class="form-select">
                    <option value="low">Low Risk</option>
                    <option value="medium" selected>Medium Risk</option>
                    <option value="high">High Risk</option>
                </select>
                <input type="text" name="notes" placeholder="Add notes" class="form-control">
            </div>

            <div class="device-grid">
                {% for device in devices %}
                <div class="device-card">
                    <input type="checkbox" name="selected_devices" value="{{ device[1] }}">
                    <div class="device-info">
                        <h3>{{ device[0] or 'Unknown Device' }}</h3>
                        <p><strong>MAC:</strong> {{ device[1] }}</p>
                        <p><strong>Type:</strong> {{ device[2] or 'Unknown' }}</p>
                        <p><strong>Last Seen:</strong> {{ device[3] }}</p>
                        <p><strong>IP:</strong> {{ device[4] }}</p>
                        {% if device[5] %}
                        <p><strong>Notes:</strong> {{ device[5] }}</p>
                        {% endif %}
                        <p><strong>Status:</strong> 
                            {% if device[6] %}
                            <span class="status-badge status-active">Reviewed</span>
                            {% else %}
                            <span class="status-badge status-inactive">Pending Review</span>
                            {% endif %}
                        </p>
                    </div>
                </div>
                {% endfor %}
            </div>
            {% else %}
            <div class="alert alert-info">
                No new devices to review at this time.
            </div>
            {% endif %}
        </form>
    </div>
{% endblock %}
