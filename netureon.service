[Unit]
Description=Netureon Network Monitor
After=network.target postgresql.service

[Service]
Type=simple
User=orangepi
WorkingDirectory=/home/orangepi/Netureon
Environment=PATH=/home/orangepi/Netureon/.venv/bin:$PATH
ExecStart=/home/orangepi/Netureon/.venv/bin/python main.py
Restart=always
RestartSec=30
StartLimitBurst=3

[Install]
WantedBy=multi-user.target
