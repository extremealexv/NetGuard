[Unit]
Description=Netureon Alert Daemon
After=network.target postgresql.service

[Service]
Type=simple
User=orangepi
Group=orangepi
WorkingDirectory=/home/orangepi/NetGuard
Environment=PYTHONPATH=/home/orangepi/NetGuard
ExecStart=/home/orangepi/NetGuard/.venv/bin/python alert_daemon.py
Restart=always
RestartSec=60

[Install]
WantedBy=multi-user.target
