[Unit]
Description=Netureon Alert Daemon
After=network.target postgresql.service

[Service]
Type=simple
User=orangepi
Group=orangepi
WorkingDirectory=/home/orangepi/Netureon
Environment=PYTHONPATH=/home/orangepi/Netureon
ExecStart=/home/orangepi/Netureon/.venv/bin/python alert_daemon.py
Restart=always
RestartSec=60

[Install]
WantedBy=multi-user.target
