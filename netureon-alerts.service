[Unit]
Description=Netureon Alert Daemon
After=network.target postgresql.service

[Service]
Type=simple
User=%i
WorkingDirectory=%h/Netureon
Environment=PATH=%h/Netureon/.venv/bin:$PATH
ExecStart=%h/Netureon/.venv/bin/python alert_daemon.py
Restart=always
RestartSec=30
StartLimitIntervalSec=300
StartLimitBurst=3

[Install]
WantedBy=multi-user.target
